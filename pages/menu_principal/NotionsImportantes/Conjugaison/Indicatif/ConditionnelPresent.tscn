[node name="RichTextLabel" type="RichTextLabel" parent="ScrollContainer/CenterContainer/VBoxContainer"]
mouse_filter = 1
layout_mode = 2
theme_override_fonts/normal_font = ExtResource("2_26c22")
theme_override_fonts/bold_font = ExtResource("3_wcclc")
theme_override_fonts/italics_font = ExtResource("4_ascmt")
theme_override_fonts/bold_italics_font = ExtResource("5_edurl")
bbcode_enabled = true
text = "Pour conjuguer les verbes espagnols au conditionnel présent, on remplace la terminaison du verbe conjugué au futur simple par les terminaisons suivantes (terminaisons de l'imparfait de l'indicatif des verbes ER/IR) :

   [i]yo[/i] : [b][color=red]-ía[/color][/b]
   [i]tu[/i] : [b][color=red]-ías[/color][/b]
   [i]el/ella/usted[/i] : [b][color=red]-ía[/color][/b]
   [i]nosotros[/i] : [b][color=red]-íamos[/color][/b]
   [i]vosotros[/i] : [b][color=red]-íais[/color][/b]
   [i]ellos/ellas/ustedes[/i] : [b][color=red]-ían[/color][/b]

[b]Exemple pour le verbe tomar[/b] :
   [i]yo[/i] : [b][color=blue]tomaría[/color][/b]
   [i]tu[/i] : [b][color=blue]tomarías[/color][/b]
   [i]el/ella/usted[/i] : [b][color=blue]tomaría[/color][/b]
   [i]nosotros[/i] : [b][color=blue]tomaríamos[/color][/b]
   [i]vosotros[/i] : [b][color=blue]tomaríais[/color][/b]
   [i]ellos/ellas/ustedes[/i] : [b][color=blue]tomarían[/color][/b] 
"
fit_content = true

