text = "  -- Comment conjuguer les verbes espagnols au subjonctif présent ? --"
horizontal_alignment = 1
autowrap_mode = 3

[node name="RichTextLabel" type="RichTextLabel" parent="ScrollContainer/CenterContainer/VBoxContainer"]
layout_mode = 2
mouse_filter = 1
theme_override_fonts/normal_font = ExtResource("2_ymjrj")
theme_override_fonts/bold_font = ExtResource("3_ikdjr")
theme_override_fonts/italics_font = ExtResource("4_45eht")
theme_override_fonts/bold_italics_font = ExtResource("5_rhh2b")
bbcode_enabled = true
text = "Pour conjuguer les verbes au subjonctif présent, on conjugue au présent tout en changeant la voyelle de terminaison : le subjonctif des verbes an -ar se forme avec un -e, celui des verbes en -er et -ir, avec un -a [i](seul cas particulier : 2e personne du pluriel en -ir → áis)[/i].

[b]Verbes en -AR[/b] :
   [i]yo[/i] : [b][color=red]-e[/color][/b]
   [i]tu[/i] : [b][color=red]-es[/color][/b]
   [i]el/ella/usted[/i] : [b][color=red]-e[/color][/b]
   [i]nosotros[/i] : [b][color=red]-emos[/color][/b]
   [i]vosotros[/i] : [b][color=red]-éis[/color][/b]
   [i]ellos/ellas/ustedes[/i] : [b][color=red]-en[/color][/b] 


[b]Verbes en -ER / IR[/b] :
   [i]yo[/i] : [b][color=red]-a[/color][/b]
   [i]tu[/i] : [b][color=red]-as[/color][/b]
   [i]el/ella/usted[/i] : [b][color=red]-a[/color][/b]
   [i]nosotros[/i] : [b][color=red]-amos[/color][/b]
   [i]vosotros[/i] : [b][color=red]-áis[/color][/b]
   [i]ellos/ellas/ustedes[/i] : [b][color=red]-an[/color][/b] 


[b]Exemple pour le verbe tomar[/b] :
   [i]yo[/i] : [b][color=blue]tome[/color][/b]
   [i]tu[/i] : [b][color=blue]tomes[/color][/b]
   [i]el/ella/usted[/i] : [b][color=blue]tome[/color][/b]
   [i]nosotros[/i] : [b][color=blue]tomemos[/color][/b]
   [i]vosotros[/i] : [b][color=blue]toméis[/color][/b]
   [i]ellos/ellas/ustedes[/i] : [b][color=blue]tomen[/color][/b] 
"
fit_content = true

